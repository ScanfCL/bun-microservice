generator client {
      provider = "prisma-client-js"
      // output        = "../node_modules/.prisma/client"
      // binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
      provider = "mongodb"
      url      = env("DATABASE_URL")
}

enum CarStatus {
      Ready
      Reserved
}

model Car {
      id     String    @id @default(auto()) @map("_id") @db.ObjectId
      name   String
      status CarStatus
      price  Int
}

model Booking {
      id           String @id @default(auto()) @map("_id") @db.ObjectId
      customerName String
      carId        String @db.ObjectId
}
